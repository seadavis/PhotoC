{
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#0f0"
                }
            }
        ]
    },
    "gtest-adapter.supportLocation": true,
    "files.associations": {
        "iostream": "cpp",
        "array": "cpp",
        "tuple": "cpp",
        "utility": "cpp"
    },
    "files.exclude": {
        "**/build": true,
        "**/bin":true
    }
}